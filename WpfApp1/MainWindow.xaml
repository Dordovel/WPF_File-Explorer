<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" 
        Height="460" 
        Width="810"
        ResizeMode="NoResize"
        Background="AntiqueWhite">


    <Grid>
        <StackPanel x:Name="stackPanel">
            <ListView Background="AliceBlue" Foreground="Brown" HorizontalAlignment="Left" Width="795" x:Name="file_list" Margin="0,44.412,0,0" Height="376" VerticalAlignment="Top">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <Grid>
                                <Grid HorizontalAlignment="Left" VerticalAlignment="Top">
                                    <Image Source="{Binding Image}" Width="30" Height="30"/>
                                </Grid>
                                <Grid HorizontalAlignment="Center" Margin="40,0,0,0">
                                    <TextBlock  Text="{Binding Title}" FontSize="14"/>
                                </Grid>
                            </Grid>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
                <ListView.ContextMenu>
                    <ContextMenu>

                        <MenuItem Header="Open" x:Name="MenuItemOpen"/>

                        <MenuItem Header="Copy" x:Name="MenuItemCopy">
                            <MenuItem.Icon>
                                <Image Source="../Image/copy.png"/>
                            </MenuItem.Icon>
                        </MenuItem>

                        <MenuItem Header="Move" x:Name="MenuItemMove">
                            <MenuItem.Icon>
                                <Image Source="../Image/move.png"></Image>
                            </MenuItem.Icon>
                        </MenuItem>

                        <MenuItem Header="Delete" x:Name="MenuItemDelete">
                            <MenuItem.Icon>
                                <Image Source="../Image/delete.png"></Image>
                            </MenuItem.Icon>
                        </MenuItem>

                        <MenuItem Header="Property" x:Name="MenuItemProperty"/>

                    </ContextMenu>
                </ListView.ContextMenu>
            </ListView>
        </StackPanel>
        <TextBox x:Name="TextBoxSearch" HorizontalAlignment="Left" Height="24" Margin="478,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="266" Style="{DynamicResource TextBoxStyle1}" MaxLines="1" RenderTransformOrigin="0.499,0.484"/>
            <Button HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="76" x:Name="ButtonBack" Style="{DynamicResource ButtonStyle1}" Height="24"/>
            <Button x:Name="ButtonSearch" HorizontalAlignment="Left" Margin="757.659,10,-27.659,0" VerticalAlignment="Top" Width="74" Style="{DynamicResource ButtonStyle1}" Height="24" RenderTransformOrigin="0.831,0.466"/>
    </Grid>
</Window>
